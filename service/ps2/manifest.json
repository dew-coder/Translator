{
  "manifest_version": 3,
  "name": "BatchMates Translator",
  "version": "0.1",
  "description": "Translate web pages into different languages",
  "icons": {
    "48": "./images1.jpeg",
    "128": "./images1.jpeg"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images1.jpeg",
      "48": "./images1.jpeg",
      "128": "./images1.jpeg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}